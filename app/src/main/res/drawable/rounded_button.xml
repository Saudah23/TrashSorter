<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Saat tombol ditekan -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#45A049" /> <!-- Warna saat ditekan -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Saat tombol tidak aktif -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#A5D6A7" /> <!-- Warna tombol disable -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Default / normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Warna utama -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</selector>
